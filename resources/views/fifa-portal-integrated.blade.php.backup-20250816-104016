    </section>

    <script>
        // Variables globales FIFA
        let currentFIFATab = 'overview';
        let fifaData = null;
        
        // Fonction pour changer d'onglet FIFA
        function showFIFATab(tabName) {
            // Masquer tous les onglets
            document.querySelectorAll('.fifa-tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // D√©sactiver tous les boutons
            document.querySelectorAll('.fifa-tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Afficher l'onglet s√©lectionn√©
            document.getElementById(tabName + '-tab').classList.add('active');
            
            // Activer le bouton correspondant
            event.target.classList.add('active');
            
            currentFIFATab = tabName;
            
            // Charger le contenu de l'onglet
            loadFIFATabContent(tabName);
        }
        
        // Fonction pour changer de sous-onglet Performances
        function showFIFASubTab(subTabName) {
            // Masquer tous les sous-onglets
            document.querySelectorAll('.fifa-sub-tab-content').forEach(subTab => {
                subTab.classList.remove('active');
            });
            
            // D√©sactiver tous les boutons de sous-onglets
            document.querySelectorAll('.fifa-sub-tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Afficher le sous-onglet s√©lectionn√©
            document.getElementById(subTabName + '-sub-tab').classList.add('active');
            
            // Activer le bouton correspondant
            event.target.classList.add('active');
            
            // Charger le contenu du sous-onglet
            loadFIFASubTabContent(subTabName);
        }
        
        // Charger le contenu d'un sous-onglet Performances
        function loadFIFASubTabContent(subTabName) {
            if (!fifaData) {
                loadFIFAData();
                return;
            }
            
            switch(subTabName) {
                case 'overview':
                    loadFIFAOverviewContent();
                    break;
                case 'advanced-stats':
                    loadFIFAAdvancedStatsContent();
                    break;
                case 'match-stats':
                    loadFIFAMatchStatsContent();
                    break;
                case 'comparison':
                    loadFIFAComparisonContent();
                    break;
            }
        }
        
        // Charger le contenu d'un onglet FIFA
        function loadFIFATabContent(tabName) {
            if (!fifaData) {
                loadFIFAData();
                return;
            }
            
            switch(tabName) {
                case 'performances':
                    // L'onglet performances affiche le premier sous-onglet par d√©faut
                    showFIFASubTab('overview');
                    break;
                case 'trends':
                    loadFIFATrendsContent();
                    break;
                case 'notifications':
                    loadFIFANotificationsContent();
                    break;
                case 'health':
                    loadFIFAHealthContent();
                    break;
                case 'medical':
                    loadFIFAMedicalContent();
                    break;
                case 'devices':
                    loadFIFADevicesContent();
                    break;
                case 'doping':
                    loadFIFADopingContent();
                    break;
            }
        }
        
        // Charger les donn√©es FIFA
        async function loadFIFAData() {
            try {
                // Afficher le loading pour les onglets principaux
                document.getElementById('trends-content').innerHTML = '<div class="fifa-loading">Chargement des tendances...</div>';
                document.getElementById('notifications-content').innerHTML = '<div class="fifa-loading">Chargement des notifications...</div>';
                document.getElementById('health-content').innerHTML = '<div class="fifa-loading">Chargement des donn√©es de sant√©...</div>';
                document.getElementById('medical-content').innerHTML = '<div class="fifa-loading">Chargement des donn√©es m√©dicales...</div>';
                document.getElementById('devices-content').innerHTML = '<div class="fifa-loading">Chargement des devices...</div>';
                document.getElementById('doping-content').innerHTML = '<div class="fifa-loading">Chargement de l\'historique dopage...</div>';
                
                // Afficher le loading pour les sous-onglets Performances
                document.getElementById('overview-content').innerHTML = '<div class="fifa-loading">Chargement des donn√©es FIFA...</div>';
                document.getElementById('advanced-stats-content').innerHTML = '<div class="fifa-loading">Chargement des statistiques avanc√©es...</div>';
                document.getElementById('match-stats-content').innerHTML = '<div class="fifa-loading">Chargement des statistiques de match...</div>';
                document.getElementById('comparison-content').innerHTML = '<div class="fifa-loading">Chargement de l\'analyse comparative...</div>';
                
                // Appel √† l'API FIFA
                const response = await fetch('/api/player-performance/7');
                
                if (!response.ok) {
                    throw new Error(`Erreur HTTP: ${response.status}`);
                }
                
                const responseData = await response.json();
                fifaData = responseData.data;
                
                console.log('‚úÖ Donn√©es FIFA r√©cup√©r√©es:', fifaData);
                
                // Mettre √† jour l'interface
                updateFIFAInterface();
                
                // Charger le contenu de l'onglet actuel
                loadFIFATabContent(currentFIFATab);
                
            } catch (error) {
                console.error('‚ùå Erreur lors du chargement FIFA:', error);
                
                // Erreurs pour les onglets principaux
                document.getElementById('trends-content').innerHTML = '<div class="fifa-error">Erreur de chargement des tendances</div>';
                document.getElementById('notifications-content').innerHTML = '<div class="fifa-error">Erreur de chargement des notifications</div>';
                document.getElementById('health-content').innerHTML = '<div class="fifa-error">Erreur de chargement des donn√©es de sant√©</div>';
                document.getElementById('medical-content').innerHTML = '<div class="fifa-error">Erreur de chargement des donn√©es m√©dicales</div>';
                document.getElementById('devices-content').innerHTML = '<div class="fifa-error">Erreur de chargement des devices</div>';
                document.getElementById('doping-content').innerHTML = '<div class="fifa-error">Erreur de chargement de l\'historique dopage</div>';
                
                // Erreurs pour les sous-onglets Performances
                document.getElementById('overview-content').innerHTML = '<div class="fifa-error">Erreur de chargement des donn√©es FIFA</div>';
                document.getElementById('advanced-stats-content').innerHTML = '<div class="fifa-error">Erreur de chargement des statistiques avanc√©es</div>';
                document.getElementById('match-stats-content').innerHTML = '<div class="fifa-error">Erreur de chargement des statistiques de match</div>';
                document.getElementById('comparison-content').innerHTML = '<div class="fifa-error">Erreur de chargement de l\'analyse comparative</div>';
            }
        }
        
        // Mettre √† jour l'interface FIFA
        function updateFIFAInterface() {
            if (!fifaData) return;
            
            // Mettre √† jour les statistiques principales
            document.getElementById('overall-rating').textContent = fifaData.overall_rating || '-';
            document.getElementById('goals').textContent = fifaData.goals_scored || '-';
            document.getElementById('assists').textContent = fifaData.assists || '-';
            document.getElementById('form').textContent = fifaData.form_percentage ? `${fifaData.form_percentage}%` : '-';
            
            // Mettre √† jour les compteurs des nouveaux onglets
            updateFIFACounters();
        }
        
        // Mettre √† jour les compteurs FIFA
        function updateFIFACounters() {
            if (!fifaData) return;
            
            // Compteur notifications bas√© sur les alertes FIFA
            const notificationsCount = calculateNotificationsCount(fifaData);
            updateCounter('notifications-count', notificationsCount);
            
            // Compteur m√©dical bas√© sur les traitements
            const medicalCount = calculateMedicalCount(fifaData);
            updateCounter('medical-count', medicalCount);
            
            // Compteur devices bas√© sur l'√©quipement
            const devicesCount = calculateDevicesCount(fifaData);
            updateCounter('devices-count', devicesCount);
        }
        
        // Calculer le nombre de notifications
        function calculateNotificationsCount(fifaData) {
            let count = 0;
            if (fifaData.injury_risk > 20) count++; // Alerte blessure
            if (fifaData.fitness_score < 70) count++; // Alerte forme
            if (fifaData.morale_percentage < 60) count++; // Alerte moral
            if (fifaData.medications_count > 0) count++; // Alerte m√©dicaments
            return count;
        }
        
        // Calculer le nombre d'√©l√©ments m√©dicaux
        function calculateMedicalCount(fifaData) {
            let count = 0;
            if (fifaData.medications_count > 0) count++;
            if (fifaData.injuries_count > 0) count++;
            if (fifaData.last_medical_check) count++;
            if (fifaData.injury_risk > 15) count++;
            return count;
        }
        
        // Calculer le nombre de devices
        function calculateDevicesCount(fifaData) {
            return 3; // iPhone, Apple Watch, AirPods
        }
        
        // Mettre √† jour un compteur
        function updateCounter(elementId, value) {
            const element = document.getElementById(elementId);
            if (element) {
                element.textContent = value;
            }
        }
        
        // Charger le contenu de l'onglet Vue d'ensemble
