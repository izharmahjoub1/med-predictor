        // Initialisation au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Landing page avec portail FIFA int√©gr√© charg√©e !');
            loadFIFAData();
            
            // Initialiser l'onglet Performances avec le premier sous-onglet
            setTimeout(() => {
                if (fifaData) {
                    showFIFASubTab('overview');
                }
            }, 500);
        });
    </script>
