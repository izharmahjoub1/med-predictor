# Configuration FIFA TMS (Transfer Matching System)
# Copiez ces variables dans votre fichier .env

# URL de base de l'API FIFA TMS
FIFA_TMS_BASE_URL=https://api.fifa.com/tms/v1

# Clé API FIFA TMS (obtenue auprès de FIFA)
FIFA_TMS_API_KEY=your_fifa_tms_api_key_here

# Timeout en secondes pour les requêtes API
FIFA_TMS_TIMEOUT=15

# Durée de cache en secondes
FIFA_TMS_CACHE_TTL=3600

# Nombre de tentatives en cas d'échec
FIFA_TMS_RETRY_ATTEMPTS=2

# Délai entre les tentatives en secondes
FIFA_TMS_RETRY_DELAY=3

# Limite de taux (requêtes par minute)
FIFA_TMS_RATE_LIMIT=100

# Mode mock (true pour les tests, false pour la production)
FIFA_TMS_MOCK_MODE=false

# Configuration pour l'environnement de développement
# FIFA_TMS_MOCK_MODE=true
# FIFA_TMS_BASE_URL=http://localhost:8001/api/fifa-tms
