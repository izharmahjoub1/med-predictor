{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build": "npm run production",
        "test": "php artisan test",
        "test:coverage": "php artisan test --coverage-html=coverage/html --coverage-clover=coverage.xml",
        "test:browser": "php artisan dusk",
        "test:browser:headless": "php artisan dusk --headless",
        "quality:php": "vendor/bin/php-cs-fixer fix --dry-run --diff && vendor/bin/phpstan analyse && vendor/bin/phpmd app text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality:fix": "vendor/bin/php-cs-fixer fix",
        "quality:js": "npx eslint public/js --ext .js",
        "quality:js:fix": "npx eslint public/js --ext .js --fix",
        "quality:css": "npx stylelint public/css --ext .css",
        "quality:css:fix": "npx stylelint public/css --ext .css --fix",
        "quality:all": "npm run quality:php && npm run quality:js && npm run quality:css",
        "quality:fix:all": "npm run quality:fix && npm run quality:js:fix && npm run quality:css:fix",
        "lint": "npm run quality:all",
        "lint:fix": "npm run quality:fix:all",
        "format": "npm run quality:fix:all && npx prettier --write .",
        "check": "npm run test && npm run quality:all",
        "ci": "npm run test:coverage && npm run quality:all && npm run test:browser:headless"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "autoprefixer": "^10.4.16",
        "axios": "^1.6.1",
        "laravel-mix": "^6.0.49",
        "lodash": "^4.17.21",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "eslint": "^8.55.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "prettier": "^3.1.0",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0"
    },
    "dependencies": {
        "alpinejs": "^3.13.3"
    }
}
