# =============================================================================
# FIT V3 - Configuration d'Environnement
# =============================================================================
# Version: 3.0.0
# Codename: AI-Powered Football Intelligence
# Date: 2025-08-17
# =============================================================================

# =============================================================================
# INTELLIGENCE ARTIFICIELLE ET MACHINE LEARNING
# =============================================================================

# Activation de l'IA
FIT_AI_ENABLED=true

# Chemin vers Python pour ML
FIT_PYTHON_PATH=/usr/bin/python3

# Endpoint de l'API d'IA
FIT_AI_API_ENDPOINT=http://localhost:8002

# Timeout pour les appels IA (secondes)
FIT_AI_API_TIMEOUT=30

# Nombre de tentatives de retry
FIT_AI_API_RETRY=3

# Limite de taux (requêtes par minute)
FIT_AI_API_RATE_LIMIT=100

# TTL du cache des prédictions (secondes)
FIT_ML_CACHE_TTL=3600

# =============================================================================
# APIs SPORTIVES AVANCÉES
# =============================================================================

# FIFA TMS Pro
FIFA_TMS_PRO_ENABLED=false
FIFA_TMS_PRO_BASE_URL=https://api.fifa.com/tms/pro/v2
FIFA_TMS_PRO_API_KEY=your_fifa_tms_pro_api_key_here
FIFA_TMS_PRO_TIMEOUT=30
FIFA_TMS_PRO_CACHE_TTL=1800

# Transfermarkt
TRANSFERMARKT_ENABLED=false
TRANSFERMARKT_BASE_URL=https://www.transfermarkt.com
TRANSFERMARKT_API_KEY=your_transfermarkt_api_key_here
TRANSFERMARKT_TIMEOUT=15
TRANSFERMARKT_CACHE_TTL=3600

# WhoScored
WHOSCORED_ENABLED=false
WHOSCORED_BASE_URL=https://api.whoscored.com
WHOSCORED_API_KEY=your_whoscored_api_key_here
WHOSCORED_TIMEOUT=20
WHOSCORED_CACHE_TTL=7200

# Opta
OPTA_ENABLED=false
OPTA_BASE_URL=https://api.opta.com
OPTA_API_KEY=your_opta_api_key_here
OPTA_TIMEOUT=25
OPTA_CACHE_TTL=3600

# =============================================================================
# INTERFACE UTILISATEUR MODERNE
# =============================================================================

# PWA (Progressive Web App)
FIT_PWA_ENABLED=true

# Nom de l'application PWA
FIT_PWA_NAME="FIT V3 - Football Intelligence"
FIT_PWA_SHORT_NAME="FIT V3"

# Couleurs du thème
FIT_PWA_THEME_COLOR="#1e40af"
FIT_PWA_BACKGROUND_COLOR="#ffffff"

# Affichage PWA
FIT_PWA_DISPLAY=standalone

# =============================================================================
# MODULE MÉDICAL AVANCÉ
# =============================================================================

# IA Médicale
FIT_MEDICAL_AI_ENABLED=true

# Intégration Wearables
FIT_WEARABLES_ENABLED=false

# Endpoint pour les données biométriques
FIT_WEARABLES_API_ENDPOINT=http://localhost:8003

# =============================================================================
# ANALYTICS ET BUSINESS INTELLIGENCE
# =============================================================================

# Analytics en temps réel
FIT_ANALYTICS_REALTIME=true

# Rétention des données (jours)
FIT_ANALYTICS_RETENTION=365

# Export automatique
FIT_ANALYTICS_AUTO_EXPORT=true

# =============================================================================
# PERFORMANCE ET MONITORING
# =============================================================================

# Driver de cache
FIT_CACHE_DRIVER=redis

# TTL du cache (secondes)
FIT_CACHE_TTL=3600

# Monitoring système
FIT_MONITORING_ENABLED=true

# Métriques de performance
FIT_PERFORMANCE_METRICS=true

# =============================================================================
# SÉCURITÉ ET CONFORMITÉ
# =============================================================================

# Chiffrement des données
FIT_DATA_ENCRYPTION=true

# Limitation de taux API
FIT_API_RATE_LIMITING=true

# Logs d'audit
FIT_AUDIT_LOGGING=true

# Conformité GDPR
FIT_GDPR_COMPLIANCE=true

# Rétention des données GDPR (jours)
FIT_GDPR_RETENTION_DAYS=2555

# Authentification multi-facteurs
FIT_MFA_ENABLED=true

# Timeout de session (minutes)
FIT_SESSION_TIMEOUT=480

# =============================================================================
# DÉVELOPPEMENT ET TESTS
# =============================================================================

# Mode debug
FIT_DEBUG_MODE=false

# Seuil de couverture de tests (%)
FIT_TEST_COVERAGE=90

# Tests automatisés
FIT_AUTOMATED_TESTING=true

# Documentation automatique
FIT_AUTO_DOCUMENTATION=true

# =============================================================================
# BASE DE DONNÉES AVANCÉE
# =============================================================================

# Driver de base de données
DB_CONNECTION=pgsql

# PostgreSQL
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=fit_v3
DB_USERNAME=fit_user
DB_PASSWORD=fit_password

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Elasticsearch (optionnel)
ELASTICSEARCH_HOST=127.0.0.1
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http

# =============================================================================
# QUEUE ET TRAITEMENT ASYNCHRONE
# =============================================================================

# Driver de queue
QUEUE_CONNECTION=redis

# Redis pour les queues
REDIS_QUEUE=default

# Nombre de workers
QUEUE_WORKERS=4

# Timeout des jobs (secondes)
QUEUE_TIMEOUT=300

# =============================================================================
# LOGS ET MONITORING
# =============================================================================

# Driver de logs
LOG_CHANNEL=stack

# Niveau de log
LOG_LEVEL=info

# Logs vers fichier
LOG_FILE=storage/logs/fit-v3.log

# Logs vers Syslog
LOG_SYSLOG=false

# =============================================================================
# NOTIFICATIONS ET ALERTES
# =============================================================================

# Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@fit-v3.com"
MAIL_FROM_NAME="FIT V3 System"

# Slack (optionnel)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord (optionnel)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =============================================================================
# DÉPLOIEMENT ET INFRASTRUCTURE
# =============================================================================

# Environnement
APP_ENV=production
APP_DEBUG=false
APP_URL=https://fit-v3.yourdomain.com

# Clé d'application
APP_KEY=base64:your_app_key_here

# Timezone
APP_TIMEZONE=UTC

# Locale
APP_LOCALE=fr

# =============================================================================
# CACHE ET SESSIONS
# =============================================================================

# Driver de session
SESSION_DRIVER=redis

# Lifetime de session (minutes)
SESSION_LIFETIME=120

# =============================================================================
# FICHIERS ET STOCKAGE
# =============================================================================

# Driver de stockage
FILESYSTEM_DISK=local

# Stockage cloud (optionnel)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=fit-v3-storage

# =============================================================================
# MONITORING ET OBSERVABILITÉ
# =============================================================================

# Prometheus (optionnel)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana (optionnel)
GRAFANA_ENABLED=false
GRAFANA_PORT=3000

# Sentry (optionnel)
SENTRY_LARAVEL_DSN=your_sentry_dsn_here

# =============================================================================
# NOTES D'INSTALLATION
# =============================================================================

# 1. Copiez ce fichier vers .env
# 2. Modifiez les valeurs selon votre environnement
# 3. Générez une clé d'application: php artisan key:generate
# 4. Configurez votre base de données
# 5. Installez Redis pour le cache et les queues
# 6. Configurez les APIs sportives selon vos besoins
# 7. Testez l'installation: php artisan fit:v3:health

# =============================================================================
# COMMANDES ARTISAN UTILES
# =============================================================================

# Vérifier le statut de l'IA
# php artisan fit:v3:ai:status

# Tester les prédictions IA
# php artisan fit:v3:ai:test

# Vérifier la connectivité des APIs
# php artisan fit:v3:apis:test

# Générer la documentation
# php artisan fit:v3:docs:generate

